{
  "builders": [
    {
      "type": "virtualbox-ovf",
      "source_path": "./output-base-k8s-centos/base-centos-7-x86_64-k8s.ova",
      "output_directory": "./output-k8s-centos/",
      "vm_name": "afx-centos-7_{{isotime \"2006-01-02_03-04-05\"}}",
      "format": "ova",
      "ssh_username": "{{user `sudo_user`}}",
      "ssh_password": "{{user `sudo_pass`}}",
      "shutdown_command": "echo '{{user `sudo_pass`}}' | sudo -S /sbin/halt -h -p"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "mkdir -p /hello"
      ]
    },
    {
      "type": "file",
      "source": "{{user `agent`}}",
      "destination": "/hello"
    },
    {
      "type": "shell",
      "environment_vars": [
        "ANSIBLE_USER={{user `sudo_user`}}",
        "ANSIBLE_PASS={{user `sudo_pass`}}",
        "RELEASE={{user `release`}}"
      ],
      "execute_command": "echo '{{user `sudo_pass`}}' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/install_hello.sh"
    }
  ]
}
